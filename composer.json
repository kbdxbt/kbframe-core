{
    "name": "kbdxbt/kbframe-core",
    "description": "kbframe core module",
    "keywords": ["kbframe", "laravel", "core"],
    "license": "MIT",
    "authors": [
        {
            "name": "kbdxbt",
            "email": "1194174530@qq.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "jiannei/laravel-response": "^v5.2"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "v3.0.0-alpha.1",
        "friendsofphp/php-cs-fixer": "^3.22.0",
        "orchestra/testbench": "^5.0 || ^6.0 || ^7.0 || ^8.0",
        "phpunit/phpunit": "^9.5.21 || ^10",
        "pestphp/pest": "^1.23 || ^2.0",
        "pestphp/pest-plugin-laravel": "^1.2 || ^2.0",
        "laravel/framework": "^10.17",
        "laravel/pint": "^1.13",
        "laravel/legacy-factories": "^1.3"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer checks"
            ],
            "pre-push": [
                "composer test"
            ]
        },
        "laravel": {
            "providers": [],
            "aliases": {

            }
        }
    },
    "autoload": {
        "psr-4": {
            "Modules\\Core\\": ""
        },
        "files": [
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Modules\\Core\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@cghooks add --ignore-lock",
            "@cghooks update"
        ],
        "cghooks": "@php ./vendor/bin/cghooks --ansi -v",
        "checks": [
            "@fix-style"
        ],
        "pest": "@php ./vendor/bin/pest",
        "pint": "@php ./vendor/bin/pint --ansi -v",
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint",
        "test": "@pest"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
